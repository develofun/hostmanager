<Window x:Class="HostManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostManager"
        xmlns:vm="clr-namespace:HostManager.ViewModels"
        xmlns:converters="clr-namespace:HostManager.Converters"
        mc:Ignorable="d"
        Title="Host Manager" 
        Height="700" 
        Width="1200"
        MinHeight="500"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Icon="Resources/app.ico"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCommand}"/>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding CheckAllCommand}"/>
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding GuideCommand}"/>
    </Window.InputBindings>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 버튼 영역 -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="새로고침" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Margin="0,0,4,0"
                        ToolTip="Ctrl+R 또는 F5"/>
                
                <Button Content="저장" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource SuccessButtonStyle}"
                        Margin="0,0,16,0"
                        ToolTip="Ctrl+S"/>
                
                <Border Width="1" Background="{StaticResource DividerBrush}" Margin="0,4,16,4"/>
                
                <Button Content="추가" 
                        Command="{Binding AddCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Margin="0,0,4,0"
                        ToolTip="Ctrl+N"/>
                
                <Button Content="삭제" 
                        Command="{Binding DeleteCommand}"
                        Style="{StaticResource DangerButtonStyle}"
                        Margin="0,0,16,0"
                        ToolTip="Delete"/>
                
                <Border Width="1" Background="{StaticResource DividerBrush}" Margin="0,4,16,4"/>
                
                <Button Content="활성화" 
                        Command="{Binding EnableCommand}"
                        Style="{StaticResource SuccessButtonStyle}"
                        Margin="0,0,4,0"/>
                
                <Button Content="비활성화" 
                        Command="{Binding DisableCommand}"
                        Style="{StaticResource DisabledButtonStyle}"
                        Margin="0,0,16,0"/>
                
                <Border Width="1" Background="{StaticResource DividerBrush}" Margin="0,4,16,4"/>

                <Button Content="전체 선택/해제" 
                        Command="{Binding CheckAllCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,0,0"
                        ToolTip="Ctrl+A"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OPEN" 
                        Command="{Binding OpenHostsFileCommand}"
                        Style="{StaticResource DarkOutlineButtonStyle}"
                        Margin="0,0,8,0"
                        ToolTip="hosts 파일 열기"/>
                
                <Button Content="백업" 
                        Command="{Binding BackupCommand}"
                        Style="{StaticResource DarkOutlineButtonStyle}"
                        Margin="0,0,8,0"
                        ToolTip="hosts 파일 백업"/>
                
                <Button Content="가이드" 
                        Command="{Binding GuideCommand}"
                        Style="{StaticResource DarkOutlineButtonStyle}"
                        ToolTip="사용 가이드 보기 (Ctrl+H)"/>
            </StackPanel>
        </Grid>

        <!-- 필터 드롭박스 영역 -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="환경:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            
            <ComboBox x:Name="EnvComboBox"
                      Grid.Column="1"
                      ItemsSource="{Binding EnvList}"
                      SelectedItem="{Binding SelectedEnv}"
                      Style="{StaticResource ModernComboBoxStyle}"
                      ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                      ToolTip="Ctrl+1"/>
            
            <Button Grid.Column="2"
                    Content="관리"
                    Command="{Binding EnvCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="12,6"
                    Margin="8,0,0,0"/>

            <TextBlock Grid.Column="4" 
                       Text="그룹:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            
            <ComboBox x:Name="GroupComboBox"
                      Grid.Column="5"
                      ItemsSource="{Binding GroupList}"
                      SelectedItem="{Binding SelectedGroup}"
                      Style="{StaticResource ModernComboBoxStyle}"
                      ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                      ToolTip="Ctrl+2"/>
            
            <Button Grid.Column="6"
                    Content="관리"
                    Command="{Binding GroupCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="12,6"
                    Margin="8,0,0,0"/>

            <TextBlock Grid.Column="8" 
                       Text="검색:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            
            <TextBox x:Name="SearchTextBox"
                     Grid.Column="9"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBoxStyle}"
                     VerticalAlignment="Center"
                     KeyDown="SearchTextBox_KeyDown"
                     ToolTip="Ctrl+F"/>
            
            <Button Grid.Column="10"
                    Content="검색"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Padding="12,6"
                    Margin="8,0,0,0"/>
            
            <Button Grid.Column="11"
                    Content="초기화"
                    Command="{Binding ResetFilterCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="12,6"
                    Margin="8,0,0,0"/>
        </Grid>

        <!-- 호스트 테이블 -->
        <Border Grid.Row="2" 
                CornerRadius="8" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource DividerBrush}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            
            <DataGrid x:Name="HostDataGrid"
                      ItemsSource="{Binding FilteredHostEntries}"
                      Style="{StaticResource ModernDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                      CellStyle="{StaticResource ModernDataGridCellStyle}"
                      RowStyle="{StaticResource ModernDataGridRowStyle}"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False">
                
                <DataGrid.Columns>
                    <!-- 체크박스 컬럼 -->
                    <DataGridTemplateColumn Width="50">
                        <DataGridTemplateColumn.Header>
                            <CheckBox IsChecked="{Binding DataContext.IsAllSelected, 
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      HorizontalAlignment="Center"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- IP 주소 컬럼 -->
                    <DataGridTemplateColumn Header="IP 주소" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding IpAddress, UpdateSourceTrigger=LostFocus}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         BorderThickness="0"
                                         Padding="4"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 호스트 컬럼 -->
                    <DataGridTemplateColumn Header="호스트" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding HostName, UpdateSourceTrigger=LostFocus}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         BorderThickness="0"
                                         Padding="4"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 환경 컬럼 -->
                    <DataGridTemplateColumn Width="120">
                        <DataGridTemplateColumn.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="환경" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <Button Content="✎" 
                                        Command="{Binding DataContext.BulkSetEnvCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        ToolTip="선택 항목 환경 일괄 설정"
                                        FontSize="12"
                                        Padding="4,2"
                                        MinWidth="24"
                                        Background="Transparent"
                                        Foreground="{StaticResource TextSecondaryBrush}"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource DividerBrush}"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.AvailableEnvs, 
                                                               RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          SelectedItem="{Binding Env, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource ModernComboBoxStyle}"
                                          ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                          BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 그룹 컬럼 -->
                    <DataGridTemplateColumn Width="140">
                        <DataGridTemplateColumn.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="그룹" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <Button Content="✎" 
                                        Command="{Binding DataContext.BulkSetGroupCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        ToolTip="선택 항목 그룹 일괄 설정"
                                        FontSize="12"
                                        Padding="4,2"
                                        MinWidth="24"
                                        Background="Transparent"
                                        Foreground="{StaticResource TextSecondaryBrush}"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource DividerBrush}"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.AvailableGroups, 
                                                               RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          SelectedItem="{Binding Group, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource ModernComboBoxStyle}"
                                          ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                          BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 설명 컬럼 -->
                    <DataGridTemplateColumn Header="설명" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Description, UpdateSourceTrigger=LostFocus}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         BorderThickness="0"
                                         Padding="4"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 상태 컬럼 -->
                    <DataGridTemplateColumn Header="상태" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Status}"
                                               Foreground="White"
                                               FontWeight="Medium"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
