<Window x:Class="HostManager.Views.AddHostDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="호스트 추가" 
        Height="420" 
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#BBDEFB"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#BDBDBD"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
    </Window.Resources>
    
    <Border Background="{StaticResource SurfaceBrush}" 
            CornerRadius="8" 
            BorderBrush="{StaticResource DividerBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- 타이틀 바 -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="호스트 추가" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Width="30" Height="30"
                            Cursor="Hand"
                            Click="CancelButton_Click"/>
                </Grid>
            </Border>
            
            <!-- 입력 폼 -->
            <Grid Grid.Row="1" Margin="24,16,24,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- IP 주소 -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="IP 주소:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         x:Name="IpAddressTextBox"
                         Padding="12,10"
                         FontSize="13"
                         BorderBrush="{StaticResource DividerBrush}"
                         BorderThickness="1"
                         Margin="0,0,0,12"/>

                <!-- 호스트명 -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="호스트명:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         x:Name="HostNameTextBox"
                         Padding="12,10"
                         FontSize="13"
                         BorderBrush="{StaticResource DividerBrush}"
                         BorderThickness="1"
                         Margin="0,0,0,12"/>

                <!-- 환경 -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="환경:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                          x:Name="EnvComboBox"
                          Padding="12,10"
                          FontSize="13"
                          IsEditable="True"
                          Margin="0,0,0,12"/>

                <!-- 그룹 -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="그룹:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <ComboBox Grid.Row="3" Grid.Column="1" 
                          x:Name="GroupComboBox"
                          Padding="12,10"
                          FontSize="13"
                          IsEditable="True"
                          Margin="0,0,0,12"/>

                <!-- 설명 -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="설명:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBox Grid.Row="4" Grid.Column="1" 
                         x:Name="DescriptionTextBox"
                         Padding="12,10"
                         FontSize="13"
                         BorderBrush="{StaticResource DividerBrush}"
                         BorderThickness="1"
                         Margin="0,0,0,12"/>

                <!-- 상태 -->
                <TextBlock Grid.Row="5" Grid.Column="0" 
                           Text="상태:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <CheckBox Grid.Row="5" Grid.Column="1" 
                          x:Name="EnabledCheckBox"
                          Content="활성화"
                          IsChecked="True"
                          VerticalAlignment="Center"
                          Margin="0,0,0,12"/>
            </Grid>

            <!-- 버튼 -->
            <Border Grid.Row="2" BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,24,0">
                    <Button Content="취소" 
                            Background="{StaticResource SurfaceBrush}"
                            Foreground="{StaticResource PrimaryBrush}"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            Padding="20,10"
                            FontSize="13"
                            Cursor="Hand"
                            Width="90"
                            Click="CancelButton_Click"
                            Margin="0,0,8,0"/>
                    <Button Content="확인" 
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,10"
                            FontSize="13"
                            Cursor="Hand"
                            Width="90"
                            Click="OkButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
