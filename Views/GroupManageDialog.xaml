<Window x:Class="HostManager.Views.GroupManageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HostManager.Converters"
        mc:Ignorable="d"
        Title="그룹 관리" 
        Height="450" 
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#BDBDBD"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#BBDEFB"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
    </Window.Resources>
    
    <Border Background="{StaticResource SurfaceBrush}" 
            CornerRadius="8" 
            BorderBrush="{StaticResource DividerBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- 타이틀 바 -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="그룹 관리" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Width="30" Height="30"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- 내용 -->
            <Grid Grid.Row="1" Margin="20,16,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 추가 버튼 -->
                <Button Grid.Row="0"
                        Content="+ 추가" 
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="16,8"
                        FontSize="13"
                        Cursor="Hand"
                        Width="80"
                        HorizontalAlignment="Left"
                        Click="AddButton_Click"
                        Margin="0,0,0,12"/>

                <!-- 그룹 목록 -->
                <Border Grid.Row="1" 
                        CornerRadius="6" 
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource DividerBrush}"
                        BorderThickness="1">
                    <ListView x:Name="GroupListView"
                              BorderThickness="0"
                              Background="Transparent">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    BorderBrush="#E0E0E0"
                                                    BorderThickness="0,0,0,1">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 그룹명 (편집 모드가 아닐 때) -->
                                    <TextBlock x:Name="NameText"
                                               Grid.Column="0"
                                               Text="{Binding Name}"
                                               VerticalAlignment="Center"
                                               FontSize="14"
                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"
                                               MouseLeftButtonDown="NameText_MouseLeftButtonDown"/>

                                    <!-- 그룹명 (편집 모드일 때) -->
                                    <TextBox x:Name="NameTextBox"
                                             Grid.Column="0"
                                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4"
                                             FontSize="14"
                                             BorderBrush="{StaticResource PrimaryBrush}"
                                             BorderThickness="1"
                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                             LostFocus="NameTextBox_LostFocus"
                                             KeyDown="NameTextBox_KeyDown"/>

                                    <!-- 삭제 버튼 -->
                                    <Button Grid.Column="1"
                                            Content="✕"
                                            Background="Transparent"
                                            Foreground="{StaticResource ErrorBrush}"
                                            BorderThickness="0"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            Padding="8"
                                            Cursor="Hand"
                                            Click="DeleteButton_Click"
                                            ToolTip="삭제"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>

            <!-- 닫기 버튼 -->
            <Border Grid.Row="2" BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,1,0,0">
                <Button Content="닫기" 
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        FontSize="13"
                        Cursor="Hand"
                        Width="90"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Click="CloseButton_Click"/>
            </Border>
        </Grid>
    </Border>
</Window>
